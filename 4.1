function setup() {
  createCanvas(400, 400);

  //changes modes of angle and circles
  angleMode(DEGREES);
  ellipseMode(CORNER);

  //prevents infinte loops
  noLoop();
}

function draw() {
  background("pink");

  //these four calls make the diffirent flowers
  drawFlower(70, 80, 1.7, "brown");
  drawFlower(320, 80, 1.5, "lightblue");
  drawFlower(200, 350, 0.7, "orange");
  drawFlower(200, 200, 2.5, "lightgrey");
}

//this function creates a loop that makes a flower with 10 pedals
function drawFlower(flowerX, flowerY, flowerSize, pedalColor) {
  push();
  translate(flowerX, flowerY);
  scale(flowerSize);
  for (let pedal = 0; pedal <= 9; pedal++) {
    fill(pedalColor);
    rotate(36);
    ellipse(0, 0, 15, 40);
  }
  //this adds the center yellow circle so it looks like a flower
  push();
  fill("yellow");
  ellipse(-10, -10, 20);
  pop();
  pop();
}
